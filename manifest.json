{
  "name": "Open in Spotify",
  "version": "2.0.1",
  "manifest_version": 2,
  "description": "One-click YouTube to Spotify button.",
  "homepage_url": "https://github.com/usmanity/open-in-spotify",
  "icons": {
    "16": "icons/icon16.png",
    "19": "icons/icon19.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png",
    "256": "icons/icon256.png"
  },
  "default_locale": "en",
  "permissions": [
    "https://*.youtube.com/*"
  ],
  "content_scripts": [
    {
      "matches": [
        "https://*.youtube.com/*"
      ],
      "css": [
        "src/inject/inject.css"
      ]
    },
    {
      "matches": [
        "https://*.youtube.com/*"
      ],
      "js": [
        "src/inject/inject.js",
        "js/jquery.js"
      ]
    }
  ],
  "content_security_policy": "script-src 'self' https://ssl.google-analytics.com; object-src 'self'",
  "web_accessible_resources": ["src/images/*.png"],
  "options_page": "src/options.html"
}
